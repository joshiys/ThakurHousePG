<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thakurhousepg">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_big"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MonthlyDataActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".ViewOutstandingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".ViewReceiptsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".SelectTenantActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"> </activity>

        <activity android:name=".TenantInformationActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".BookingScreenActivity"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".BedViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".OccupancyAndBookingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ReceiptActivity"
            android:label="@string/title_activity_payment"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>