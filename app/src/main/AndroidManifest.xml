<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sanyog.thakurhousepg">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_big"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Blue"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.sanyog.thakurhousepg.MonthlyDataActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name="com.sanyog.thakurhousepg.ViewOutstandingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="com.sanyog.thakurhousepg.ViewReceiptsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="com.sanyog.thakurhousepg.SelectTenantActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name="com.sanyog.thakurhousepg.TenantInformationActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.sanyog.thakurhousepg.BookingScreenActivity"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="com.sanyog.thakurhousepg.BedViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="com.sanyog.thakurhousepg.OccupancyAndBookingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.sanyog.thakurhousepg.ReceiptActivity"
            android:label="@string/title_activity_receipt"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="com.sanyog.thakurhousepg.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>