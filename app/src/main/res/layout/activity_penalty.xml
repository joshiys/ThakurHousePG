<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"

    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".PenaltyActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2">

        <TextView
            android:id="@+id/roomNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:text="@string/room_number"/>
        <EditText
            android:id="@+id/roomNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:textColor="@color/colorForText"
            android:maxLines="1"
            android:hint="Type Room Number"/>

        <TextView
            android:id="@+id/outstandingPenaltyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:text="Outstanding Penalty"/>
        <TextView
            android:id="@+id/pendingPenaltyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>


        <CheckBox
            android:id="@+id/waiveOffPenaltyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:text="Waive-off Amount"/>
        <EditText
            android:id="@+id/waiveOffPenaltyValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:focusedByDefault="true"
            android:hint="Waive Off Amount"/>
        <CheckBox
            android:id="@+id/payOnlineCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:text="@string/rent_amount"/>
        <EditText
            android:id="@+id/payOnlineValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:focusedByDefault="true"
            android:hint="Rent Amount"/>

        <CheckBox
            android:id="@+id/payInCashCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:text="In Cash"/>
        <EditText
            android:id="@+id/payInCashValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:focusedByDefault="true"
            android:hint="Rent Amount"/>

    </GridLayout>


    <Button
        android:id="@+id/savePenaltyData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SAVE"/>

</LinearLayout>